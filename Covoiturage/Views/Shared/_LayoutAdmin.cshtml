<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Covoiturage</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/Covoiturage.styles.css" asp-append-version="true"/>
    <style>
        /* --- Sidebar custom --- */
        .sidebar {
            min-height: 100vh;           /* pleine hauteur */
            background: #f8f9fa;         /* gris clair bootstrap */
            border-right: 1px solid #dee2e6;
        }
        .sidebar .nav-link {
            color: #333;
            padding: .75rem 1rem;
        }
        .sidebar .nav-link.active {
            background: #e9ecef;
            font-weight: 600;
        }
    </style>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Covoiturage</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarMain" aria-controls="navbarMain"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarMain">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<div class="container-fluid">
    <div class="row">
        <!-- ===== Sidebar ===== -->
        <nav class="col-md-3 col-lg-2 d-md-block sidebar collapse" id="sidebarMenu">
            <div class="position-sticky pt-3">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link active" asp-controller="TableaudeBord" asp-action="VersTableauDeBord">
                            <i class="bi bi-house"></i> Tableau de bord
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Utilisateur" asp-action="Index">
                            <i class="bi bi-bookmark"></i> Utilisateurs
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Trajet" asp-action="Index">
                            <i class="bi bi-car-front"></i> Trajets
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Depense" asp-action="Index">
                            <i class="bi bi-bookmark"></i> Depenses
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="TableaudeBord" asp-action="Profil">
                            <i class="bi bi-person"></i> Mon profil
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Commission" asp-action="Index">
                            <i class="bi bi-person"></i> Commission
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Abonnement" asp-action="Index">
                            <i class="bi bi-person"></i> Montant Abonnement
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- ===== Contenu principal ===== -->
        <main role="main" class="col-md-9 ms-sm-auto col-lg-10 px-md-4 pb-3">
            @RenderBody()
        </main>
    </div>
</div>

<footer class="border-top footer text-muted mt-auto py-3">
    <div class="container">
        &copy; 2025 - Co-vaika - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
