@model Covoiturage.Models.Depense

@{
    ViewData["Title"] = "Supprimer";
    Layout = "_LayoutAdmin";
}

<h1>Supprimer</h1>

<h3>Êtes-vous sûr de vouloir supprimer cette dépense ?</h3>
<div>
    <h4>Dépense</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Intitule)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Intitule)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Montant)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Montant)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Supprimer" class="btn btn-danger" /> |
        <a asp-action="Index">Retour à la liste</a>
    </form>
</div>