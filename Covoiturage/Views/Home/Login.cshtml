@{
    Layout = null;
    List<Role> roles = ViewData["roles"] as List<Role>;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Page</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- DevExtreme CSS -->
    <link rel="stylesheet" href="~/dx/css/dx.common.css" />
    <link rel="stylesheet" href="~/dx/css/dx.light.css" />

    <!-- Ton CSS -->
    <link rel="stylesheet" href="~/css/style.css">
</head>
<body>
    <div class="container-fluid">
        <div class="row min-vh-100">
            <div class="col-md-6 d-none d-md-block bg-image"></div>
            <div class="col-md-6 d-flex align-items-center justify-content-center">
                <div class="login-container">
                    @* <img src="images/logo.png" alt="Logo" class="logo mb-4"> *@
                    <h2 class="text-center mb-4">Welcome Back</h2>

                    <form action="/Home/LoginAction" method="post">
                        <div class="mb-3">
                            <label for="username" class="form-label">Username</label>
                            <input type="text" name="username" class="form-control" id="username" placeholder="Enter username" required>
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" name="password" class="form-control" id="password" placeholder="Enter password" required>
                        </div>
                        
                        @ViewBag.message @* ceci est un message d'erreur *@
                        
                        <div class="mb-3 form-check">
                            <input type="checkbox" class="form-check-input" id="rememberMe">
                            <label class="form-check-label" for="rememberMe">Remember me</label>
                        </div>

                        <p>Role :</p>
                        <p>
                            <select name="idrole" id="idrole">
                                @foreach (var v in roles)
                                {
                                    <option value="@v.Id">@v.Nom</option>
                                }
                            </select>
                        </p>

                        <button type="submit" class="btn btn-primary w-100">Login</button>
                    </form>

                    <p class="text-center mt-3">
                        <a href="#" class="text-decoration-none">Forgot Password?</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</body>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>