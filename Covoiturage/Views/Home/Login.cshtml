@{
    Layout = null;
    List<Role> roles = ViewData["roles"] as List<Role>;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Co-vaika MG - Connexion</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Bootstrap Icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.0/font/bootstrap-icons.min.css" rel="stylesheet">

    <!-- DevExtreme CSS -->
    <link rel="stylesheet" href="~/dx/css/dx.common.css" />
    <link rel="stylesheet" href="~/dx/css/dx.light.css" />

    <style>
        /* === Login Page Styles === */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            overflow-x: hidden;
        }

        .login-wrapper {
            min-height: 100vh;
            background: linear-gradient(135deg, rgba(102, 126, 234, 0.9), rgba(118, 75, 162, 0.9)),
                        url('https://images.unsplash.com/photo-1449824913935-59a10b8d2000?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80');
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            position: relative;
        }

        .login-wrapper::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(135deg, rgba(102, 126, 234, 0.8), rgba(118, 75, 162, 0.8));
            z-index: 1;
        }

        .login-container {
            position: relative;
            z-index: 2;
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border-radius: 20px;
            box-shadow: 0 20px 40px rgba(0,0,0,0.1);
            padding: 2rem 2rem;
            max-width: 380px;
            width: 100%;
            border: 1px solid rgba(255,255,255,0.2);
        }

        .brand-header {
            text-align: center;
            margin-bottom: 1.5rem;
        }

        .brand-logo {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            width: 60px;
            height: 60px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 0.75rem;
            box-shadow: 0 10px 30px rgba(102, 126, 234, 0.3);
        }

        .brand-logo i {
            font-size: 1.5rem;
            color: white;
        }

        .brand-title {
            font-size: 1.75rem;
            font-weight: 700;
            color: #333;
            margin-bottom: 0.25rem;
            background: linear-gradient(135deg, #667eea, #764ba2);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .brand-subtitle {
            color: #666;
            font-size: 0.85rem;
            margin-bottom: 0;
        }

        .form-label {
            font-weight: 600;
            color: #333;
            margin-bottom: 0.75rem;
        }

        .form-control {
            border: 2px solid #e9ecef;
            border-radius: 12px;
            padding: 0.875rem 1rem;
            font-size: 1rem;
            transition: all 0.3s ease;
            background: rgba(255,255,255,0.9);
        }

        .form-control:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.15);
            background: white;
        }

        .input-group {
            position: relative;
        }

        .input-icon {
            position: absolute;
            left: 1rem;
            top: 50%;
            transform: translateY(-50%);
            color: #666;
            font-size: 1.1rem;
            z-index: 3;
        }

        .form-control.with-icon {
            padding-left: 3rem;
        }

        /* Role selector styling */
        .role-selector {
            margin-bottom: 1.5rem;
        }

        .role-label {
            font-weight: 600;
            color: #333;
            margin-bottom: 0.75rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-size: 0.95rem;
        }

        .form-select {
            border: 2px solid #e9ecef;
            border-radius: 12px;
            padding: 0.875rem 1rem;
            font-size: 1rem;
            transition: all 0.3s ease;
            background: rgba(255,255,255,0.9);
        }

        .form-select:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.15);
            background: white;
        }

        .btn-login {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            border-radius: 12px;
            padding: 0.875rem 1rem;
            font-size: 1.1rem;
            font-weight: 600;
            color: white;
            width: 100%;
            transition: all 0.3s ease;
            box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);
        }

        .btn-login:hover {
            transform: translateY(-2px);
            box-shadow: 0 12px 35px rgba(102, 126, 234, 0.4);
            background: linear-gradient(135deg, #5a6fd8 0%, #6b5b95 100%);
        }

        .btn-login:active {
            transform: translateY(0);
        }

        .form-check {
            margin: 1.5rem 0;
        }

        .form-check-input:checked {
            background-color: #667eea;
            border-color: #667eea;
        }

        .form-check-label {
            color: #666;
            font-size: 0.95rem;
        }

        /* Error message styling */
        .error-message {
            background: linear-gradient(135deg, #dc3545, #c82333);
            color: white;
            padding: 0.75rem 1rem;
            border-radius: 8px;
            margin: 1rem 0;
            text-align: center;
            font-weight: 500;
            box-shadow: 0 4px 15px rgba(220, 53, 69, 0.3);
        }

        /* Decorative elements */
        .particles {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            overflow: hidden;
            z-index: 1;
        }

        .particle {
            position: absolute;
            background: rgba(255,255,255,0.1);
            border-radius: 50%;
            opacity: 0.6;
        }

        .particle:nth-child(1) { width: 20px; height: 20px; left: 10%; top: 10%; }
        .particle:nth-child(2) { width: 15px; height: 15px; left: 20%; top: 20%; }
        .particle:nth-child(3) { width: 25px; height: 25px; left: 30%; top: 30%; }
        .particle:nth-child(4) { width: 18px; height: 18px; left: 40%; top: 40%; }
        .particle:nth-child(5) { width: 22px; height: 22px; left: 50%; top: 50%; }
        .particle:nth-child(6) { width: 16px; height: 16px; left: 60%; top: 60%; }
        .particle:nth-child(7) { width: 20px; height: 20px; left: 70%; top: 70%; }
        .particle:nth-child(8) { width: 24px; height: 24px; left: 80%; top: 80%; }
    </style>
</head>
<body>
    <div class="login-wrapper">
        <!-- Floating particles -->
        <div class="particles">
            <div class="particle"></div>
            <div class="particle"></div>
            <div class="particle"></div>
            <div class="particle"></div>
            <div class="particle"></div>
            <div class="particle"></div>
            <div class="particle"></div>
            <div class="particle"></div>
        </div>

        <div class="container-fluid h-100">
            <div class="row min-vh-100 align-items-center justify-content-center">
                <div class="col-12">
                    <div class="login-container mx-auto">
                        <!-- Brand Header -->
                        <div class="brand-header">
                            <div class="brand-logo">
                                <i class="bi bi-car-front-fill"></i>
                            </div>
                            <h1 class="brand-title">Co-vaika MG</h1>
                            <p class="brand-subtitle">Votre plateforme de covoiturage à Madagascar</p>
                        </div>

                        <!-- Login Form -->
                        <form action="/Home/LoginAction" method="post">
                            <!-- Username Field -->
                            <div class="mb-3">
                                <label for="username" class="form-label">
                                    <i class="bi bi-person me-2"></i>Nom d'utilisateur
                                </label>
                                <div class="input-group">
                                    <i class="bi bi-person input-icon"></i>
                                    <input type="text" name="username" class="form-control with-icon" 
                                           id="username" placeholder="Entrez votre nom d'utilisateur" required>
                                </div>
                            </div>

                            <!-- Password Field -->
                            <div class="mb-3">
                                <label for="password" class="form-label">
                                    <i class="bi bi-lock me-2"></i>Mot de passe
                                </label>
                                <div class="input-group">
                                    <i class="bi bi-lock input-icon"></i>
                                    <input type="password" name="password" class="form-control with-icon" 
                                           id="password" placeholder="Entrez votre mot de passe" required>
                                </div>
                            </div>

                            @* <!-- Error Message --> *@
                            @if (ViewBag.error != null)
                            {
                                <div class="error-message">
                                    <i class="bi bi-exclamation-triangle me-2"></i>@ViewBag.error
                                </div>
                            }

                            <!-- Role Selection -->
                            <div class="role-selector mb-3">
                                <label for="idrole" class="form-label fw-semibold">
                                    <i class="bi bi-person-badge me-2"></i>
                                    Sélectionnez votre rôle
                                </label>

                                <select name="idrole" id="idrole" class="form-select shadow-sm border-primary">
                                    @foreach (var role in roles)
                                    {
                                        <option value="@role.Id">@role.Nom</option>
                                    }
                                </select>
                            </div>

                            <!-- Login Button -->
                            <button type="submit" class="btn-login mb-2">
                                <i class="bi bi-box-arrow-in-right me-2"></i>
                                Se connecter
                            </button>
                            <!-- Bouton qui ouvre le modal -->
                            <button type="button" class="btn btn-outline-primary w-100" data-bs-toggle="modal" data-bs-target="#inscriptionModal">
                                <i class="bi bi-person-plus me-2"></i>
                                S'inscrire
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

<!-- Modal d'inscription -->
<div class="modal fade" id="inscriptionModal" tabindex="-1" aria-labelledby="inscriptionModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="inscriptionModalLabel">Créer un compte</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <div class="modal-body">
        <form action="/Home/Sinscrire" method="post">
          <div class="mb-3">
            <label for="Nom" class="form-label">Nom</label>
            <input name="Nom" class="form-control" required />
          </div>

          <div class="mb-3">
            <label for="Email" class="form-label">Email</label>
            <input name="Email" type="email" class="form-control" required />
          </div>

          <div class="mb-3">
            <label for="MotDePasse" class="form-label">Mot de passe</label>
            <input name="MotDePasse" type="password" class="form-control" required />
          </div>

          <div class="mb-3">
            <label for="Numero" class="form-label">Numéro</label>
            <input name="Numero" class="form-control" />
          </div>

          <div class="mb-3">
            <label for="IdRole" class="form-label">Rôle</label>
            <select name="IdRole" class="form-select">
                <option value="">-- Choisir --</option>
                @foreach (var role in roles)
                {
                    <option value="@role.Id">@role.Nom</option>
                }
            </select>
          </div>

          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
            <button type="submit" class="btn btn-primary">S'inscrire</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    
<script>
        // Effet d'entrée simple
        document.addEventListener('DOMContentLoaded', function() {
            const container = document.querySelector('.login-container');
            container.style.opacity = '0';
            container.style.transform = 'translateY(30px)';
            
            setTimeout(() => {
                container.style.transition = 'all 0.6s ease';
                container.style.opacity = '1';
                container.style.transform = 'translateY(0)';
            }, 100);

            // Animation des particules
            const particles = document.querySelectorAll('.particle');
            particles.forEach((particle, index) => {
                setTimeout(() => {
                    particle.style.transform = 'scale(1.2)';
                    particle.style.opacity = '0.8';
                    setTimeout(() => {
                        particle.style.transform = 'scale(1)';
                        particle.style.opacity = '0.6';
                    }, 1000);
                }, index * 200);
            });
        });

        // Focus effects
        document.querySelectorAll('.form-control').forEach(input => {
            input.addEventListener('focus', function() {
                this.parentElement.classList.add('focused');
            });
            
            input.addEventListener('blur', function() {
                this.parentElement.classList.remove('focused');
            });
        });
    </script>

</body>
</html>